<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#faa">

    <ImageView
        android:id="@+id/imgVwProfileImgSU"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="10dp"
        android:background="#0a5"
        android:src="@drawable/ic_photo"
        />
    <Button
        android:id="@+id/btnSetImgSU"
        android:layout_toRightOf="@+id/imgVwProfileImgSU"
        android:layout_alignBottom="@id/imgVwProfileImgSU"
        android:layout_width="138dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="setProfileImage"
        android:text="Set your photo"
        />
    <LinearLayout
        android:id="@+id/edtFirstAndLastNameLyoutSU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_below="@+id/imgVwProfileImgSU"
        >
        <EditText
            android:id="@+id/edtTxtFNSU"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:hint="First name"
            android:inputType="textLongMessage"
            />
        <EditText
            android:id="@+id/edtTxtLNSU"
            android:layout_toRightOf="@+id/edtTxtFNSU"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:hint="Last name"
            android:inputType="textLongMessage"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/edtTxtEmailSU"
        android:layout_below="@+id/edtFirstAndLastNameLyoutSU"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:hint="Your email address"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:id="@+id/edtTxtPasswordSU"
        android:layout_below="@+id/edtTxtEmailSU"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:hint="Create a password"
        android:inputType="textPassword"
        />
    <EditText
        android:id="@+id/edtTxtConfirmPasswordSU"
        android:layout_below="@+id/edtTxtPasswordSU"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:hint="Confirm password"
        android:inputType="textPassword"
        />
    <Button
        android:id="@+id/btnCreateAccountSU"
        android:layout_below="@+id/edtTxtConfirmPasswordSU"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Create your account"
        />
    <Button
        android:id="@+id/btnBackToMainMenuSU"
        android:layout_below="@+id/btnCreateAccountSU"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Back to main menu"
        />

</RelativeLayout>
